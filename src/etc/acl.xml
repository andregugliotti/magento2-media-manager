<?xml version="1.0" encoding="UTF-8" ?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::content">
                    <resource id="Gugliotti_MediaManager::media" title="Media"
                        translate="title" sortOrder="100">
                        <resource id="Gugliotti_MediaManager::media_manager"
                            title="Media Manager" translate="title" sortOrder="10" />
                    </resource>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Gugliotti_MediaManager::settings" title="Gugliotti Media Manager" />
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>